<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fiu.ssobec" >

    <!--

   <uses-sdk
       android:minSdkVersion="15"
       android:targetSdkVersion="21" /> -->

   <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Required to register a SyncStatusObserver to display a "syncing..." progress indicator. -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <!-- Required to enable our SyncAdapter after it's created. -->
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <!-- Required because we're manually creating a new account. -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Login Activity -->

        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>

        <!-- Setting Activity -->

        <activity
            android:name=".Activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".Activity.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.LoginActivity" />
        </activity>

        <!-- My Zones Activity -->

        <activity
            android:name=".Activity.MyZonesActivity"
            android:label="@string/title_activity_my_zones" >

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <!-- Zones Description Activity -->

        <activity
            android:name=".Activity.ZonesDescriptionActivity"
            android:label="@string/title_activity_zones_description"
            android:parentActivityName=".Activity.MyZonesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MyZonesActivity" />
        </activity>

        <!-- Energy Activity -->
        <activity
            android:name=".Activity.EnergyActivity"
            android:label="@string/title_activity_temperature"
            android:parentActivityName=".Activity.ZonesDescriptionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fiu.ssobec.Activity.ZonesDescriptionActivity" />
        </activity>


        <!--Stub Authenticator-->
        <service
            android:name="fiu.ssobec.Synchronization.DataSync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>


        <!--Stub provider-->
        <provider
            android:name="fiu.ssobec.Synchronization.DataSync.StubProvider"
            android:authorities="fiu.ssobec.provider"
            android:exported="false"
            android:syncable="true"/>


        <!--Sync Adapter-->
        <service
            android:name="fiu.ssobec.Synchronization.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

    </application>

</manifest>