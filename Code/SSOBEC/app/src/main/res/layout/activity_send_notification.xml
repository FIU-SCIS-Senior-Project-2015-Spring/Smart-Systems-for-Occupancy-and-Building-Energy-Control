<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_button_background"
    android:weightSum="3"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Notify Region Subscribers"
        android:textColor="@color/default_background"
        android:drawableLeft="@drawable/envelope_icon1"
        android:textSize="30dp" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/lightbluepatternrepeat"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="Earn 3 Reward Points after turning light off in wasteful region"
            android:drawableLeft="@drawable/rewards_icon_50x"
            android:background="@drawable/lightbluepatternrepeat"
            android:textColor="@color/default_background"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/login_button_background"
        android:orientation="vertical">

        <info.hoang8f.widget.FButton
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:layout_marginTop="20dp"
            fbutton:buttonColor="@color/fbutton_color_sun_flower"
            fbutton:shadowColor="@color/fbutton_color_orange"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:drawablePadding="20dip"
            android:id="@+id/sendNotications"
            android:padding="90dip"
            android:text="Send Notifications"
            android:textColor="@color/default_background"
            android:layout_margin="5dip"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>