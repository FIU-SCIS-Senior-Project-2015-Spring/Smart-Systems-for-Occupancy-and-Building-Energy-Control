<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_gravity="center"
android:orientation="vertical"
tools:context=".LinearLayout"
    android:background="@color/background_material_light">

    <!-- Text View CREATE ACCOUNT -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:text="@string/create_account"
    android:textColor="@color/default_font_color" />


    <!-- 1st Row - First Name-->

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10px"
        android:paddingTop="20px"
        android:text="First Name:"
        android:id="@+id/first_name"
        android:textColor="@color/default_font_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:layout_marginLeft="40px"
        android:paddingTop="20px"
        android:id="@+id/first_name_field"
        android:textColor="@color/default_font_color" />


    <!-- 1st Row - Last Name-->

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20px"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:paddingTop="20px"
        android:paddingLeft="10px"
        android:id="@+id/last_name"
        android:textColor="@color/default_font_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40px"
        android:layout_weight="0.50"
        android:paddingTop="20px"
        android:id="@+id/last_name_field"
        android:textColor="@color/default_font_color" />

    <!-- 1st Row - Email-->

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:id="@+id/email"
            android:textColor="@color/default_font_color" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="20px"
            android:id="@+id/email_field"
            android:textColor="@color/default_font_color" />

        <!-- 1st Row - Password-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:id="@+id/password"
            android:textColor="@color/default_font_color" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="20px"
            android:id="@+id/password_field"
            android:inputType="textPassword"
            android:textColor="@color/default_font_color" />


        <!-- 1st Row - Repeat Password-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat Password:"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:id="@+id/repeat_password"
            android:textColor="@color/default_font_color" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:layout_weight="0.50"
            android:paddingTop="20px"
            android:id="@+id/repeat_field"
            android:inputType="textPassword"
            android:textColor="@color/default_font_color" />


</LinearLayout>


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="20px"
    android:paddingTop="10px"
    android:text="@string/create_account_submit"
    android:id="@+id/create_login_button"
    android:onClick="registerUser"
    android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/warning_message_view"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff000c"
        android:layout_marginTop="20dp" />

</LinearLayout>